<ui:FluentWindow x:Class="SteamShortcutCreator.Views.SteamSelectWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="Select Steam Folder"
                 Height="220" Width="450"
                 WindowBackdropType="Mica"
                 ExtendsContentIntoTitleBar="True"
                 ResizeMode="NoResize"
                 WindowStartupLocation="CenterScreen">

    <DockPanel>
        <ui:TitleBar Title="Steam Path Selector"
                     Icon="Assets/AppIcon.ico"
                     DockPanel.Dock="Top" />

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Instruction -->
            <ui:TextBlock Text="Please select your Steam installation folder:"
                          FontSize="14"
                          Margin="0,0,0,12" />

            <!-- Path + Browse -->
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <TextBox x:Name="SteamPathTextBox"
                         Width="300"
                         IsReadOnly="True"
                         Margin="0,0,8,0"/>
                <ui:Button x:Name="BrowseButton"
                           Content="Browse"
                           Appearance="Primary"
                           Width="90"
                           Click="BrowseButton_Click"/>
            </StackPanel>

            <!-- Status + Confirm -->
            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,16,0,0">
                <ui:TextBlock x:Name="StatusText"
                              Visibility="Collapsed"
                              FontSize="12"
                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                              Margin="0,0,0,8"/>
                <ui:Button x:Name="ConfirmButton"
                           Content="Confirm"
                           Appearance="Primary"
                           HorizontalAlignment="Right"
                           Width="100"
                           Click="ConfirmButton_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</ui:FluentWindow>
